                    <address>
                        <addrLine>
                        <persName>  Miss <choice> <abbr> V. </abbr> <expan> Vita </expan> </choice> Sackville-West </persName>
                        </addrLine>
                        <addrLine>
                            <settlement type="castle"> Sissinghurst Castle </settlement>
                        </addrLine>
